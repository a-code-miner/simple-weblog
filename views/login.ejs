<form class="form-signin" action="/users/login" method="POST">
    <h1 class="h3 mb-3 font-weight-normal">ورود به بخش مدیریت</h1>
    <%- include('./includes/loginMessages.ejs') %>
        <label for="inputEmail" class="sr-only">آدرس ایمیل</label>
        <input name="email" type="email" id="inputEmail" class="form-control mb-2" placeholder="آدرس ایمیل" required
            autofocus>
        <label for="inputPassword" class="sr-only">کلمه عبور</label>
        <input name="password" type="password" id="inputPassword" class="form-control" placeholder="کلمه عبور" required>
        <div class="checkbox mb-3">
            <label>
                <input name="remember" type="checkbox" value="remember-me"> مرا به خاطر بسپار
            </label>
            <br>
            <label>
                <a href="/users/register">اکانت کاربری ندارم.</a>
            </label>
        </div>
        <div class="form-group">
            <div class="g-recaptcha" data-sitekey="6LeOzqErAAAAAPraBPJQkxSOgjAla35sL3G01a13"></div>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">ورود</button>
</form>